<TextInput>:
    background_normal: ''
    background_active: ''
    foreground_color: 0, 0, 0, 1
    cursor_color: 1, 1, 1, 1
    padding: [15, self.height / 2 - self.line_height / 2, 15, 0]
    halign: 'center'
    multiline: False
    
    canvas.before:
        Color:
            rgba: (0.8, 0.8, 0.8, 1) if not self.focus else (0.9, 0.9, 0.9, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [25]
        
        # Forcer la couleur du texte à être dessinée après
        Color:
            rgba: 0, 0, 0, 1

<Label>:
    color: (0, 0, 0, 1)

<BoxLayout>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size