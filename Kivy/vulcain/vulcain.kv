<TextInput>:
    background_normal: ''
    background_active: ''
    background_color: 0, 0, 0, 0  # <--- AJOUTER CETTE LIGNE (Transparent)
    foreground_color: 0.090, 0.114, 0.129, 1
    cursor_color: 0.95, 0.95, 0.95, 1
    padding: [15, self.height / 2 - self.line_height / 2, 15, 0]
    halign: 'center'
    multiline: False
    
    canvas.before:
        Color:
            rgba: (0.384, 0.580, 0.604, 1) if not self.focus else (0.412, 0.627, 0.655, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [25]
        
        # Forcer la couleur du texte à être dessinée après
        Color:
            rgba: 0.090, 0.114, 0.129, 1

<Label>:
    color: (0.090, 0.114, 0.129, 1)

<BoxLayout>:
    canvas.before:
        Color:
            rgba: 0.792, 0.902, 0.898, 1
        Rectangle:
            pos: self.pos
            size: self.size